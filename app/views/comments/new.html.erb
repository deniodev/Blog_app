<%= form_with model: [@user, @post, @comment], url: user_post_comments_path, html: { class: " p-4 flex flex-col items-center" } do |f| %>
  <div>
    <%= f.label :text, required: true %>
    <%= f.text_field :text, required: true, class: "rounded-md p-2 bg-violet-200 mb-1" %>
  </div>
  <div>
    <%= f.submit "Submit", class: "hover:bg-violet-500 bg-violet-300 rounded-full py-2 px-4 text-center" %>
  </div>
<% end %>